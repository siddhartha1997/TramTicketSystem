@model UTTMVC.Models.TicketDetails

@{
    ViewData["Title"] = "TicketInformation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    h1 {
        background-color: #ffc324;
        background-size: auto;
        height: auto;
        background-repeat: no-repeat;
        padding-bottom: 10px;
        color: antiquewhite;
        text-align: center;
    }
    #PageBody {
        padding: 5%;
    }

    dd, dt {
        padding-bottom: 2%;
        padding-top: 2%;
        border:solid;
        text-align:center;
    }

    #PageFooter {
        text-align: center;
        padding: 2%;
        font-weight: bold;
        color: #ffc324;
    }

    body {
        background-color: azure;
    }
    a{
        text-decoration:none;
        color:black;
    }
    a:hover {
        text-decoration: none;
        color: black;
    }
    .pointer {
        cursor: pointer;
        color:black;
    }
</style>
<h1>Ticket Information</h1>

<div id="PageBody">
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Route)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Route)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TramType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TramType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)<br />(Journey within 24hrs)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumberOfPassenger)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumberOfPassenger)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TicketFare)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TicketFare)
        </dd>
    </dl>
</div>
<div id="PageFooter">
    <a asp-action="Index">Back to HomePage</a> |
    <span class="pointer" onclick="window.print()">Print Ticket</span>
</div>
